<?xml version="1.0" encoding="utf-8"?>
<com.ljt.freeviewcollection.viewframe.DiscrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:discrollve="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ljt.freeviewcollection.viewframe.DiscrollActivity">
<!--<com.ljt.freeviewcollection.viewframe.MyTextView-->
    <!--android:id="@+id/mtv"-->
    <!--android:layout_width="@dimen/activity_width"-->
    <!--android:layout_height="@dimen/activity_height"-->
    <!--ljt:testAttr="520"-->
    <!--android:text="@string/hello"-->
    <!--/>-->

    <com.ljt.freeviewcollection.viewframe.DiscrollViewContent
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="25dp"
            android:textSize="54sp"
            tools:visibility="gone"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="春天到了 花儿要开了 到处是小鸟的声音..." />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#007788"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_threshold="0.3" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromLeft|fromBottom"
            android:src="@drawable/v4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            discrollve:discrollve_fromBgColor="#88EE66"
            discrollve:discrollve_toBgColor="#000000" />

        <ImageView
            android:layout_width="220dp"
            android:layout_height="110dp"
            android:layout_gravity="right"
            android:src="@drawable/v5"
            discrollve:discrollve_translation="fromRight" />

        <!--fromBottom-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="这是一年新的开始,我们都需要撸起袖子好好干..."
            android:textSize="18sp"
            discrollve:discrollve_alpha="true"
            discrollve:discrollve_translation="fromBottom" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:src="@drawable/v6"
            discrollve:discrollve_scaleX="true"
            discrollve:discrollve_scaleY="true"  />
    </com.ljt.freeviewcollection.viewframe.DiscrollViewContent>
</com.ljt.freeviewcollection.viewframe.DiscrollView>
